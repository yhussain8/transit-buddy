<%- include('./partials/header') %>

<p>Edit the name and/or description of your trip below</p>

<form action="/trips/<%= trip._id %>?_method=PUT" method="POST">
    <h3>Trip Name</h3>
    <input type="text" name="tripName" value="<%= trip.tripName %>">

    <h3>Trip Description</h3>
    <input type="text" name="description" value="<%= trip.description %>">

    <button type="submit">Update</button>
</form>

<%- include('./partials/footer') %>